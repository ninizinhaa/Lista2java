package Q3;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		
		Triangulos meuTriangulo1 = new Triangulos();
		Triangulos meuTriangulo2 = new Triangulos();
		
		//Triangulo 1
		System.out.println("Digite o primeiro lado do triangulo 1: ");
		meuTriangulo1.lado1 = sc.nextDouble();
		
		System.out.println("Digite o segundo lado do triangulo 1: ");
		meuTriangulo1.lado2 = sc.nextDouble();
		
		System.out.println("Digite o terceiro lado do triangulo 1: ");
		meuTriangulo1.lado3 = sc.nextDouble();
		
		//Triangulo 2
		
		System.out.println("Digite o primeiro lado do triangulo 2: ");
		meuTriangulo1.lado4 = sc.nextDouble();
		
		System.out.println("Digite o segundo lado do triangulo 2: ");
		meuTriangulo1.lado5 = sc.nextDouble();
		
		System.out.println("Digite o terceiro lado do triangulo 2: ");
		meuTriangulo1.lado6 = sc.nextDouble();
		
		double trianguloum = meuTriangulo1.calcularArea();
		double triangulodois = meuTriangulo2.calcularArea2();
		
		 if (trianguloum > triangulodois) {
	            System.out.println("O triângulo 1 possui a maior área.");
	        } else if (triangulodois > trianguloum) {
	            System.out.println("O triângulo 2 possui a maior área.");
	        } else {
	            System.out.println("Os triângulos 1 e 2 possuem áreas iguais.");
	        }
		
		sc.close();

	}

}
